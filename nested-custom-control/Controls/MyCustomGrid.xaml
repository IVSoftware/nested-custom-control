<?xml version="1.0" encoding="utf-8" ?>

<!-- 
    x:Name should not be set here.
    That would be like a custom button saying that in every case its name should be "Button1"
 -->
<Grid 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:nested_custom_control.Controls"
    x:Class="nested_custom_control.Controls.MyCustomGrid">
    <Border>
        <!-- Instance of MyCustomControl. HERE is where you name this instance. -->
        <local:MyCustomControl
            x:Name="myCustomControlInstance_1"/>
    </Border>
</Grid>
